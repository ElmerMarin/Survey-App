@model Model.Encuestas

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="c-modal__dialog modal-dialog" role="document">
        <div class="c-modal__content">
            <div class="c-modal__header u-bg-primary">
                <h3 class="c-modal__title">Encuestas</h3>
                <span class="c-modal__close" data-dismiss="modal" aria-label="Close">
                    <i class="fa fa-close"></i>
                </span>
            </div>
            <div class="c-modal__body">
                <form class="c-card__body formAjax" method="post" action="~/Encuestas/Edit">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="c-field u-mb-small">
                                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "c-field__label" })
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "c-input" } })
                                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="c-field u-mb-small">
                                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "c-field__label" })
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "c-input" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                         <div class="c-field u-mb-small col-12">
                               <label class="c-field__label" for="Estado">Estado</label>
                               <select name="Estado" class="c-input" id="Estado">
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo" selected>Inactivo</option>
                               </select>
                         </div>
                    </div>

                    <div class="u-text-left">

                    </div>

                    <div class="u-text-center">
                        @Html.ActionLink("Regresar", "Index", new { }, new { @class = "c-btn c-btn--success" })
                        <button class="c-btn c-btn--info c-btn btnAjax" type="submit">
                            Guardar
                            <img src="~/Content/img/load.gif" class="loadingAjax" style="display:none" />
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

}
@section scripts
{
    <script type="text/javascript">


        $(document).ready(function () {

            document.getElementById('Estado').value="@Model.Estado";

        });



    </script>


}