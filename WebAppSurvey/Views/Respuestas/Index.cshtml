@model IEnumerable<Model.Respuestas>

@{
    ViewBag.Title = "Index";
    int Id = ViewBag.idRespuesta;
}

<table class="c-table c-table--highlight u-mb-small">
    <caption class="c-table__title">
        <div class="row">
            <div class="col-md-6">
                Respuestas <small>20</small>
                <button type="button" class="c-btn c-btn--info" data-toggle="modal" data-target="#modal8">
                    Agregar
                </button>
                @Html.ActionLink("Create New", "Create", new { id = Id })
            </div>
            <div class="col-md-6">
                <div class="c-field has-addon-right">
                    <input class="c-input" id="txtBuscar" type="text" placeholder="Buscar..." value="@ViewBag.Buscar">
                    <button id="btnBuscar" type="button" class="c-btn c-btn--info c-field__addon">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </div>

    </caption>
    <thead class="c-table__head c-table__head--slim">
        <tr>
            <th class="c-table__cell c-table__cell--head">
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th class="c-table__cell c-table__cell--head">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th class="c-table__cell c-table__cell--head">
                @Html.DisplayNameFor(model => model.Preguntas.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr class="c-table__row">
                <td class="c-table__cell">
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td class="c-table__cell">
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td class="c-table__cell">
                    @Html.DisplayFor(modelItem => item.Preguntas.Descripcion)
                </td>
                <td>
                    @Html.ActionLink(" Edit", "Edit", new { id = item.Id }, new { @class = "fa fa-pencil-square-o u-mr-xsmall c-btn c-btn--success " })
                    @Html.ActionLink(" Delete", "Delete", new { id = item.Id }, new { @class = "fa fa-trash-o u-mr-xsmall c-btn c-btn--danger" })
                </td>
            </tr>
        }
    </tbody>

</table>
