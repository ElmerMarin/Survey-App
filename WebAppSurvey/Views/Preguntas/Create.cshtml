@model Model.Preguntas

@{
    ViewBag.Title = "Create";
    int Id = ViewBag.IDEncuestas;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <div class="c-modal__dialog modal-dialog" role="document">
            <div class="c-modal__content">
                <div class="c-modal__header u-bg-primary">
                    <h3 class="c-modal__title">Preguntas</h3>
                    <span class="c-modal__close" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-close"></i>
                    </span>
                </div>
                <div class="c-modal__body">
                    <form method="post" action="~/Preguntas/Create">
                        <div class="row">
                            <div class="c-field u-mb-small col-12">
                                <label class="c-field__label" for="Descripcion">Descripcion</label>
                                <input class="c-input" type="text" id="Descripcion" required="required" name="Descripcion" placeholder="Descripcion">
                            </div>
                        </div>
                        <div class="row">
                            <div class="c-field u-mb-small col-12">
                                <label class="c-field__label" for="Estado">Estado</label>
                                <select name="Estado" class="c-input" id="Estado<">
                                    <!-- Opciones de la lista -->
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo" selected>Inactivo</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="c-field u-mb-small col-12">
                                @Html.LabelFor(model => model.IdEncuesta, "IdEncuesta", htmlAttributes: new { @class = "c-field u-mb-small col-12 c-field__label" })
                                @Html.DropDownList("IdEncuesta", null, htmlAttributes: new { @class = "c-field u-mb-small col-12 c-field__label c-input" })
                                @Html.ValidationMessageFor(model => model.IdEncuesta, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="u-text-center">
                            @Html.ActionLink("Regresar", "Index", new { d = Id }, new { @class = "c-btn c-btn--success" })
                            <button class="c-btn c-btn--info" type="submit">
                                Guardar
                                <img src="~/Content/img/load.gif" class="loadingAjax" style="display:none" />
                            </button>
                        </div>
                    </form>

                </div>
            </div><!-- // .c-modal__content -->
        </div><!-- // .c-modal__dialog -->
    </div>
}

@if (HttpContext.Current.Session["TipoUsuario"].Equals("Coordinador"))
{
    <script type="text/javascript">
            var elemento = document.getElementsByClassName("c-sidebar__link");
            elemento[0].classList.remove("is-active");
            elemento[3].className += " is-active";
    </script>

}

