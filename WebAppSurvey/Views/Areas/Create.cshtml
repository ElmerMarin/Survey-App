@model Model.Areas

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <div class="c-modal__dialog modal-dialog" role="document">
            <div class="c-modal__content">
                <div class="c-modal__header u-bg-primary">
                    <h3 class="c-modal__title">Areas</h3>
                    <span class="c-modal__close" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-close"></i>
                    </span>
                </div>
                <div class="c-modal__body">
                    <form class="c-card__body formAjax" method="post" action="~/Areas/Create">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="c-field u-mb-small">
                                    <label class="c-field__label" for="Nombre">Nombre</label>
                                    <input class="c-input" type="text" id="Nombre" required="required" name="Nombre" placeholder="Nombre">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="c-field u-mb-small">
                                    <label class="c-field__label" for="Fecha">Fecha</label>
                                    <input class="c-input" type="text" id="Fecha" required="required" name="Fecha" placeholder="Fecha">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="c-field u-mb-small col-12">
                                <label class="c-field__label" for="Estado">Estado</label>
                                <select name="Estado" class="c-input" id="Estado<">
                                    <!-- Opciones de la lista -->
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo" selected>Inactivo</option>
                                </select>
                            </div>
                        </div>
                        <div class="u-text-center">
                            @Html.ActionLink("Regresar", "Index", new { }, new { @class = "c-btn c-btn--success" })
                            <button class="c-btn c-btn--info c-btn btnAjax" type="submit">
                                Guardar
                                <img src="~/Content/img/load.gif" class="loadingAjax" style="display:none" />
                            </button>
                        </div>
                    </form>

                </div>
            </div><!-- // .c-modal__content -->
        </div><!-- // .c-modal__dialog -->
    </div>
}