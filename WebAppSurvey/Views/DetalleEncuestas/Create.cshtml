@model Model.DetalleEncuesta

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <div class="c-modal__dialog modal-dialog" role="document">
            <div class="c-modal__content">
                <div class="c-modal__header u-bg-primary">
                    <h3 class="c-modal__title">Configuracion</h3>
                    <span class="c-modal__close" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-close"></i>
                    </span>
                </div>
                <div class="c-modal__body">
                    <form method="post" action="~/Areas/Create">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="c-field u-mb-small">
                                    <label class="c-field__label" for="FechaInicio">Fecha de Inicio</label>
                                    <div class="c-field has-addon-left">
                                        <span class="c-field__addon"><i class="fa fa-calendar"></i></span>
                                        <label class="c-field__label u-hidden-visually" for="FechaInicio">Disabled Input</label>
                                        <input class="c-input" data-toggle="datepicker" id="FechaInicio" type="text" name="FechaInicio" placeholder="Focus to open caleendar">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="c-field u-mb-small">
                                    <label class="c-field__label" for="FechaFinal">Fecha Final</label>
                                    <div class="c-field has-addon-left">
                                        <span class="c-field__addon"><i class="fa fa-calendar"></i></span>
                                        <label class="c-field__label u-hidden-visually" for="FechaFinal">Disabled Input</label>
                                        <input class="c-input" data-toggle="datepicker" id="FechaFinal" type="text" name="FechaFinal" placeholder="Focus to open caleendar">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="c-field u-mb-small col-12">
                                <label class="c-field__label" for="Estado">Estado</label>
                                <select name="Estado" class="c-input" id="Estado<">
                                    <!-- Opciones de la lista -->
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo" selected>Inactivo</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="c-field u-mb-small col-12">
                                @Html.LabelFor(model => model.IdEncuesta, "IdEncuesta", htmlAttributes: new { @class = "c-field u-mb-small col-12 c-field__label" })
                                @Html.DropDownList("IdEncuesta", null, htmlAttributes: new { @class = "c-field u-mb-small col-12 c-field__label c-input" })
                                @Html.ValidationMessageFor(model => model.IdEncuesta, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="c-field u-mb-small col-12">
                                @Html.LabelFor(model => model.IdArea, "IdArea", htmlAttributes: new { @class = "c-field u-mb-small col-12 c-field__label" })
                                @Html.DropDownList("IdArea", null, htmlAttributes: new { @class = "c-field u-mb-small col-12 c-field__label c-input" })
                                @Html.ValidationMessageFor(model => model.IdArea, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="c-field u-mb-small col-12">
                                @Html.LabelFor(model => model.IdCategoria, "IdCategoria", htmlAttributes: new { @class = "c-field u-mb-small col-12 c-field__label" })
                                @Html.DropDownList("IdCategoria", null, htmlAttributes: new { @class = "c-field u-mb-small col-12 c-field__label c-input" })
                                @Html.ValidationMessageFor(model => model.IdCategoria, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="u-text-center">
                            @Html.ActionLink("Regresar", "Index", new { }, new { @class = "c-btn c-btn--success" })
                            <button class="c-btn c-btn--info" type="submit">
                                Guardar
                                <img src="~/Content/img/load.gif" class="loadingAjax" style="display:none" />
                            </button>
                        </div>
                    </form>

                </div>
            </div><!-- // .c-modal__content -->
        </div><!-- // .c-modal__dialog -->
    </div>
}

<script>
        var elemento = document.getElementsByClassName("c-sidebar__link");
        elemento[0].classList.remove("is-active");
        elemento[7].className += " is-active";

</script>